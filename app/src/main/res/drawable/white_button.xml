<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <layer-list>
            <item  android:top="5dp">
            <shape>
                <corners android:radius="3dp" />
                <solid android:color="#aaa387" />
            </shape>
            </item>

            <item android:bottom="2dp" android:right="2dp">
        <shape>

            <solid
                android:color="#ffffff" />

            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"

                android:right="10dp"
                android:bottom="5dp" />
        </shape>
</item>
        </layer-list>
    </item>



    <item android:state_enabled="true" >
        <layer-list>
            <item  android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#aaa387" />
                </shape>
                <corners
                    android:radius="4dp" />
            </item>

            <item android:bottom="2dp" android:right="2dp">
                <shape>

                    <solid
                        android:color="#ffffff" />

                    <corners
                        android:radius="4dp" />
                    <padding
                        android:left="10dp"

                        android:right="10dp"
                        android:bottom="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>